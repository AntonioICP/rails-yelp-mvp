<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], prompt: "Choose a rating" %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-primary" %>
